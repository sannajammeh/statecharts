{
  "name": "statecharts.sh",
  "version": "0.0.1",
  "private": false,
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    },
    "./schema": {
      "types": "./dist/schema/index.d.mts",
      "import": "./dist/schema/index.mjs"
    },
    "./react": {
      "types": "./dist/react/index.d.mts",
      "import": "./dist/react/index.mjs"
    },
    "./scjson.schema.json": "./scjson.schema.json"
  },
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "files": ["dist", "scjson.schema.json"],
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "scripts": {
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "devDependencies": {
    "@statecharts/typescript-config": "*",
    "@testing-library/react": "^16.3.0",
    "@types/react": "^19.2.4",
    "@vitejs/plugin-react": "^5.1.3",
    "jsdom": "^28.0.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tsdown": "^0.20.1",
    "typescript": "5.9.2",
    "vitest": "^3.2.4"
  }
}
