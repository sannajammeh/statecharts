---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog")).sort(
  (a, b) => b.data.date.getTime() - a.data.date.getTime()
);

function formatDate(date: Date): string {
  return date.toISOString().split("T")[0] ?? "";
}
---

<BaseLayout title="Blog - Statecharts.sh">
  <main class="mx-auto max-w-2xl px-4 py-16">
    <h1 class="mb-8 text-3xl font-bold">Blog</h1>
    {posts.length === 0 ? (
      <p class="text-gray-600">No posts yet. Check back soon!</p>
    ) : (
      <ul class="space-y-8">
        {posts.map((post) => (
          <li>
            <a href={`/blog/${post.slug}`} class="group block">
              <time class="text-sm text-gray-500">{formatDate(post.data.date)}</time>
              <h2 class="text-xl font-semibold group-hover:underline">
                {post.data.title}
              </h2>
              <p class="mt-1 text-gray-600">{post.data.description}</p>
            </a>
          </li>
        ))}
      </ul>
    )}
  </main>
</BaseLayout>
