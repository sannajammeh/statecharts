---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import type { CollectionEntry } from "astro:content";

export async function getStaticPaths() {
  const posts = await getCollection("blog");
  return posts.map((post) => ({
    params: { slug: post.slug },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<"blog">;
}

const { post } = Astro.props;
const { Content } = await post.render();

function formatDate(date: Date): string {
  return date.toISOString().split("T")[0] ?? "";
}
---

<BaseLayout title={`${post.data.title} - Statecharts.sh`} description={post.data.description}>
  <main class="mx-auto max-w-2xl px-4 py-16">
    <article>
      <header class="mb-8">
        <time class="text-sm text-gray-500">{formatDate(post.data.date)}</time>
        <h1 class="mt-2 text-3xl font-bold">{post.data.title}</h1>
        <p class="mt-2 text-gray-600">{post.data.description}</p>
        <p class="mt-2 text-sm text-gray-500">By {post.data.author}</p>
      </header>
      <div class="prose prose-gray max-w-none">
        <Content />
      </div>
    </article>
  </main>
</BaseLayout>
