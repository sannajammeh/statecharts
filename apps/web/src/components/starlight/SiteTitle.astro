---
/**
 * Custom SiteTitle component to match landing page style
 */
interface Props {
  siteTitleHref?: string;
}

const { siteTitleHref = "/" } = Astro.props;
---

<a href={siteTitleHref} class="site-title">
  <img src="/logo.svg" alt="" class="site-logo" />
  <span class="site-title-text">Statecharts.sh</span>
</a>

<style>
  .site-title {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    text-decoration: none;
    color: hsl(0, 0%, 93%);
  }

  .site-logo {
    width: 1.25rem;
    height: 1.25rem;
    filter: invert(1);
  }

  .site-title-text {
    font-size: 0.875rem;
    font-weight: 700;
    text-transform: uppercase;
    letter-spacing: 0.1em;
  }
</style>
