---
interface Props {
  title: string;
  description: string;
  href: string;
  date?: string;
}

const { title, description, href, date } = Astro.props;
---

<a
  href={href}
  class="group flex items-center gap-4 border border-neutral-800 px-5 py-4 no-underline transition-colors hover:border-neutral-600"
>
  <div class="flex-1">
    <h3 class="m-0 text-sm font-medium uppercase tracking-wide text-neutral-200">
      {title}
    </h3>
    <p class="m-0 mt-1 text-xs text-neutral-500">
      {description}
    </p>
  </div>
  {date && (
    <span class="text-[10px] uppercase tracking-wide text-neutral-600">
      {date}
    </span>
  )}
  <span class="text-neutral-600 transition-colors group-hover:text-neutral-300">
    &rarr;
  </span>
</a>
