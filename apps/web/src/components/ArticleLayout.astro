---
import BaseLayout from "../layouts/BaseLayout.astro";

interface Props {
  title: string;
  description: string;
  author?: string;
  publishedDate?: Date;
  updatedDate?: Date;
}

const { title, description, author, publishedDate, updatedDate } = Astro.props;

const formattedDate = publishedDate
  ? new Intl.DateTimeFormat("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    }).format(publishedDate)
  : undefined;

const formattedUpdatedDate = updatedDate
  ? new Intl.DateTimeFormat("en-US", {
      year: "numeric",
      month: "long",
      day: "numeric",
    }).format(updatedDate)
  : undefined;
---

<BaseLayout
  title={`${title} | Statecharts.sh`}
  description={description}
  ogType="article"
  article={publishedDate ? { publishedTime: publishedDate.toISOString(), author: author ?? "Statecharts Team" } : undefined}
>
  <div class="min-h-screen bg-neutral-950">
    <div class="mx-auto max-w-4xl px-6 py-12">
      <!-- Header -->
      <header class="mb-8 flex items-center justify-between">
        <a
          href="/"
          class="flex items-center gap-2 font-mono text-sm font-bold uppercase tracking-widest text-neutral-200 no-underline hover:text-white"
        >
          <img src="/logo.svg" alt="" class="h-5 w-5 invert" />
          <span>Statecharts.sh</span>
        </a>
        <nav class="flex items-center gap-6">
          <a
            href="/docs"
            class="text-xs uppercase tracking-wide text-neutral-500 no-underline transition-colors hover:text-neutral-300"
          >
            Docs
          </a>
          <a
            href="/articles"
            class="text-xs uppercase tracking-wide text-neutral-500 no-underline transition-colors hover:text-neutral-300"
          >
            Articles
          </a>
        </nav>
      </header>

      <!-- Article Header -->
      <div class="mb-8 border-b border-neutral-800 pb-8">
        <h1 class="mb-4 font-mono text-2xl font-bold uppercase tracking-wide text-neutral-100">
          {title}
        </h1>
        <p class="mb-4 text-sm leading-relaxed text-neutral-400">
          {description}
        </p>
        <div class="flex items-center gap-4 text-xs text-neutral-500">
          {author && <span>By {author}</span>}
          {formattedDate && <span>{formattedDate}</span>}
          {formattedUpdatedDate && <span class="text-neutral-600">Updated {formattedUpdatedDate}</span>}
        </div>
      </div>

      <!-- Article Content -->
      <article class="prose prose-invert prose-sm max-w-none prose-headings:font-mono prose-headings:uppercase prose-headings:tracking-wide prose-h2:text-lg prose-h3:text-base prose-p:text-neutral-400 prose-p:leading-relaxed prose-a:text-neutral-300 prose-a:underline-offset-2 hover:prose-a:text-white prose-strong:text-neutral-200 prose-code:rounded prose-code:bg-neutral-900 prose-code:px-1.5 prose-code:py-0.5 prose-code:text-neutral-300 prose-pre:bg-neutral-900 prose-pre:border prose-pre:border-neutral-800 prose-ul:text-neutral-400 prose-ol:text-neutral-400 prose-li:marker:text-neutral-600">
        <slot />
      </article>

      <!-- Footer -->
      <footer class="mt-16 border-t border-neutral-800 pt-8">
        <a
          href="/articles"
          class="inline-flex items-center gap-2 text-xs uppercase tracking-wide text-neutral-500 no-underline transition-colors hover:text-neutral-300"
        >
          <span>&larr;</span>
          <span>Back to Articles</span>
        </a>
      </footer>
    </div>
  </div>
</BaseLayout>
